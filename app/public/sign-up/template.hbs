<form {{action createPlayer model on="submit"}}>

  <p class="form-field">
    <label>Email</label>
    {{input value=model.email}}
  </p>

  <p class="form-field">
    <label>Username</label>
    {{input value=model.username}}
  </p>

  <p class="form-field">
    <label>Password</label>
    {{input type="password" value=model.password}}
  </p>

  <button>Sign Up</button>
</form>
